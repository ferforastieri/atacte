# Dockerfile Unificado - Sentro Password Manager
FROM node:18-alpine

# Instalar dependências do sistema
RUN apk add --no-cache \
    nginx \
    openssl \
    ca-certificates \
    libssl3 \
    libcrypto3 \
    supervisor

# Criar diretórios
RUN mkdir -p /var/log/supervisor \
    && mkdir -p /etc/nginx/conf.d \
    && mkdir -p /app/backend \
    && mkdir -p /app/frontend

# Configurar Nginx
COPY nginx/nginx.conf /etc/nginx/nginx.conf
RUN rm -f /etc/nginx/http.d/default.conf

# Configurar Supervisor
COPY supervisord.conf /etc/supervisor/conf.d/supervisord.conf

# ===== BACKEND =====
WORKDIR /app/backend

# Copiar package.json primeiro para cache de dependências
COPY backend/package*.json ./
COPY backend/tsconfig.json ./

# Instalar dependências (cache layer)
RUN npm ci && npm cache clean --force

# Copiar código fonte
COPY backend/src/ ./src/
COPY backend/config.env ./

# Gerar Prisma Client e build
RUN npx prisma generate --schema=src/infrastructure/prisma/schema.prisma
RUN npm run build

# ===== FRONTEND =====
WORKDIR /app/frontend

# Copiar package.json primeiro para cache de dependências
COPY web/package*.json ./
COPY web/tsconfig.json ./
COPY web/vite.config.ts ./
COPY web/tailwind.config.js ./
COPY web/postcss.config.js ./

# Instalar dependências (cache layer)
RUN npm ci && npm cache clean --force

# Copiar código fonte
COPY web/src/ ./src/
COPY web/public/ ./public/
COPY web/index.html ./
COPY web/env.d.ts ./

# Build do frontend
RUN npm run build

# ===== NGINX CONFIGURATION =====
# Criar diretório para arquivos estáticos do Nginx
RUN mkdir -p /usr/share/nginx/html
RUN cp -r /app/frontend/dist/* /usr/share/nginx/html/

# Criar script de health check
RUN echo '#!/bin/sh' > /usr/local/bin/health-check.sh && \
    echo 'curl -f http://localhost:3001/health || exit 1' >> /usr/local/bin/health-check.sh && \
    chmod +x /usr/local/bin/health-check.sh

# Expor porta
EXPOSE 3000

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD /usr/local/bin/health-check.sh

# Comando de inicialização
CMD ["/usr/bin/supervisord", "-c", "/etc/supervisor/conf.d/supervisord.conf"]